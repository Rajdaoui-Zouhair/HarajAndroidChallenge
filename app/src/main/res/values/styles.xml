<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
        <item name="android:padding">5dp</item>
        <item name="strokeWidth">10dp</item>
        <item name="strokeColor">#e0e9ff</item>
    </style>

    <style name="dialog_fragment_animation" parent="">
        <item name="android:windowEnterAnimation">@anim/slid_up</item>
        <item name="android:windowExitAnimation">@anim/slid_down</item>
    </style>
</resources>